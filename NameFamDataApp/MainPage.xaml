<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NameFamDataApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Frame BorderColor="Wheat" Margin="10">
            <StackLayout>
                <Entry x:Name="Name" Placeholder="Введите Имя" />
                <Entry x:Name="Fam" Placeholder="Введите Фамилию" />
                <DatePicker x:Name="Date" />
                <StackLayout Orientation="Horizontal">
                    <Button x:Name="SaveBtn" Text="Save" Clicked="OnSaveClicked" />
                    <Button x:Name="VosstBtn" Text="Vosst" Clicked="OnVosstClicked" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
